<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="414dp"
        android:layout_height="271dp"
        android:background="@drawable/nen1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/SignUp"
            android:layout_width="132dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="184dp"
            android:text="Sign up"
            android:textSize="38dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/line"
            android:layout_width="74dp"
            android:layout_height="5dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="248dp"
            android:background="@drawable/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="461dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/email"
            android:layout_width="64dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/WriteEmail"
            android:layout_width="368dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:ems="10"
            android:inputType="text"
            android:text="demo@email.com"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="83dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:text="Phone no"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/WritePhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WriteEmail" />

        <EditText
            android:id="@+id/WritePhone"
            android:layout_width="367dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:ems="10"
            android:inputType="text"
            android:text="+00 000-0000-000"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="103dp"
            android:layout_height="21dp"
            android:layout_marginStart="24dp"
            android:text="Password"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/WritePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WritePhone" />

        <EditText
            android:id="@+id/WritePassword"
            android:layout_width="365dp"
            android:layout_height="38dp"
            android:layout_marginStart="23dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="enter your password"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Confirm Password"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/WriteConfirmPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WritePassword" />

        <EditText
            android:id="@+id/WriteConfirmPassword"
            android:layout_width="367dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="89dp"
            android:ems="10"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="295dp"
        android:layout_height="59dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#FF8383"
        android:text="Create Account"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="187dp"
        android:layout_height="23dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="68dp"
        android:text="Already have an Account!"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login"
        android:layout_width="49dp"
        android:layout_height="22dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="69dp"
        android:text="Login"
        android:textColor="#FF8383"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

