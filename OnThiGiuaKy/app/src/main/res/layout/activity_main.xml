<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/footer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logo"
        android:layout_width="135dp"
        android:layout_height="137dp"
        android:layout_marginTop="100dp"
        android:background="@mipmap/ntu_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footer_bg">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="392dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="196dp"
        android:background="@mipmap/img_1"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="392dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="196dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCN1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#A5CCF8"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Chức năng 1"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCN2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#A5CCF8"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Chức năng 2"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCN3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#A5CCF8"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Chức năng 3"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnAboutMe"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#A5CCF8"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="About Me"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>