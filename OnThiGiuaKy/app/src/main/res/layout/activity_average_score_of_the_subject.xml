<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AverageScoreOfTheSubjectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_bg"
        android:layout_width="407dp"
        android:layout_height="149dp"
        android:background="@drawable/footer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/logo"
            android:layout_width="85dp"
            android:layout_height="81dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:background="@mipmap/ntu_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/titleAverageScore"
            android:layout_width="244dp"
            android:layout_height="75dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="Tính điểm trung bình môn học"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="750dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif"
            android:text="Điểm giữa kì (50%)"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/input_gk"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="30dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Điểm cuối kì (50%)"
            android:textSize="25dp">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:id="@+id/input_ck"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="30dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/bt_tinh"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:text="Tính Điểm TB"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/input_kq"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="50dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="132dp"
            android:backgroundTint="#D8EED2"
            android:drawableLeft="@drawable/arrow_right_icon"
            android:text="Quay lại"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>